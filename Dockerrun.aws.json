{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "nginx-conf",
      "host": {
        "sourcePath": "/var/app/current/deployment/etc/nginx/conf.d"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "devpi",
      "image": "innovativetravel/docker-devpi:innovative",
      "environment": [],
      "essential": true,
      "memory": 512,
      "privileged": true,
      "mountPoints": [
      ]
    },
    {
      "name": "nginx-proxy",
      "image": "nginx",
      "essential": true,
      "memory": 128,
      "command": [
        "/bin/bash", "-c",
        "htpasswd -c -b /etc/nginx/conf.d/htpasswd $HTTP_USERNAME $HTTP_PASSWORD; nginx -g 'daemon off;'"
      ],
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": [
        "devpi"
      ],
      "volumesFrom": [
      ],
      "mountPoints": [
        {
          "sourceVolume": "nginx-conf",
          "containerPath": "/etc/nginx/conf.d",
          "readOnly": true
        },
        {
          "sourceVolume": "awseb-logs-nginx-proxy",
          "containerPath": "/var/log/nginx"
        }
      ]
    }
  ]
}
